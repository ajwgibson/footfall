
<h3>Change your password</h3>

<%= form_for(resource, as: resource_name, 
      url: user_registration_path, 
      html: { method: :put, class: 'form-signin' }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :password, "Current password", class: 'sr-only' %><br />
    <%= f.password_field :current_password, autofocus: true, 
          autocomplete: "off", placeholder: 'Current password',
          class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, "New password", class: 'sr-only' %><br />
    <%= f.password_field :password,
          autocomplete: "off", placeholder: 'New password',
          class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: 'sr-only' %><br />
    <%= f.password_field :password_confirmation, 
          autocomplete: "off", placeholder: 'Confirm new password',
          class: 'form-control' %>
  </div>

  <button class="btn btn-lg btn-primary btn-block mt-5" type="submit">
    Change my password
  </button>

<% end %>

<%= link_to "Cancel", root_path %><br />
<%= render "devise/shared/links" %>