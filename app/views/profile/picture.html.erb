<div class="wrapper wrapper-content animated fadeInRight">

  <div class="ibox ">
    <div class="ibox-title">
      <div style="display: flex; align-items: center;">
        <%= show_avatar_xs(current_user) %>
        <h3 style="" class="ml-3">
          <%= current_user.full_name %>
        </h3>
      </div>
    </div>
    <div class="ibox-content">
      <div class="row">
        <div class="col-md-6">
          <p class="text-muted">
            You can upload a photo or an avatar that will be displayed
            in place of the default initials. The image will be resized and
            cropped, so please pick a picture where the subject is somewhere
            near the centre.
          </p>

          <%= form_tag(change_profile_picture_path, method: "post", class: 'mt-3', multipart: true) do %>

            <div class="custom-file">
              <input id="profile_picture" name="profile_picture" type="file" class="custom-file-input">
              <label for="profile_picture" class="custom-file-label">Choose file...</label>
            </div> 

            <div class="mt-4 float-right">
              <%= button_tag(type: "submit", class: "btn btn-w-m btn-primary") do %>
                <i class="fa fa-check"></i> Save
              <% end %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
